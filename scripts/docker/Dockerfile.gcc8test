FROM cm314/splinelib:gtest2

# Add current directory as working directory to docker
ADD . /code
WORKDIR /code

# Set-up shell
SHELL ["bash", "-c"]
ENV BASH_ENV /spack/bashrc

RUN spack repo add /code/scripts/spack-repo
RUN spack find -v
RUN spack spec -I splinelib@github%gcc@8.0.1
RUN spack setup -v splinelib@github%gcc@8.0.1
RUN mkdir /code/build
WORKDIR /code/build
RUN ./../spconfig.py ..

# Build and execute tests
CMD make && ./test/SplineLibTests